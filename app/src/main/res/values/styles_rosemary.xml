<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Style Rosemary(Version 1.1) -->

    <style name="Rosemary">
    </style>

    <style name="Rosemary.Plane">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Rosemary.Plane.Light">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Rosemary.Plane.Dark">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Rosemary.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Rosemary.Line.Light">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Rosemary.Line.Dark">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Rosemary.Point">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Rosemary.Point.Light">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Rosemary.Point.Dark">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Rosemary.Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/base_content_description</item>
    </style>

</resources>
